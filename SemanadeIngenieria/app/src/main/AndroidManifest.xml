<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.semanaingenieria">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Semana de IngenierÃ­a"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">

        <!-- Activity Principal -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activity Registrar Evento -->
        <activity
            android:name=".RegistrarEventoActivity"
            android:parentActivityName=".MainActivity" />

        <!-- Activity Listar Eventos -->
        <activity
            android:name=".ListarEventosActivity"
            android:parentActivityName=".MainActivity" />

        <!-- Activity Consultar Evento -->
        <activity
            android:name=".ConsultarEventoActivity"
            android:parentActivityName=".MainActivity" />

        <!-- Activity Actualizar Evento -->
        <activity
            android:name=".ActualizarEventoActivity"
            android:parentActivityName=".MainActivity" />

    </application>

</manifest>