<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_tasks">

    <fragment
        android:id="@+id/nav_tasks"
        android:name="com.ecci.taskmanager.ui.fragments.TaskListFragment"
        android:label="Tareas" />

    <fragment
        android:id="@+id/nav_task_detail"
        android:name="com.ecci.taskmanager.ui.fragments.TaskDetailFragment"
        android:label="Detalle de Tarea">
        <argument
            android:name="taskId"
            app:argType="long"
            android:defaultValue="0L" />
    </fragment>

    <fragment
        android:id="@+id/nav_categories"
        android:name="com.ecci.taskmanager.ui.fragments.CategoryFragment"
        android:label="Categorias" />

    <fragment
        android:id="@+id/nav_statistics"
        android:name="com.ecci.taskmanager.ui.fragments.StatisticsFragment"
        android:label="Estadisticas" />

    <fragment
        android:id="@+id/nav_settings"
        android:name="com.ecci.taskmanager.ui.fragments.SettingsFragment"
        android:label="Configuracion" />

    <action
        android:id="@+id/action_to_task_detail"
        app:destination="@id/nav_task_detail" />



</navigation>